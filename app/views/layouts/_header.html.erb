<header class="navbar navbar-fixed-top navbar-inverse">
 <div class="banner" style="width: 100%; background-color: blue; position: absolute; top: 0" >
    <%= link_to image_tag("banner_logo.png", style: "height: 100px;", class: "offset3"), root_path, id: "logo" %>
  </div>
  <div /*class="navbar-inner affix-top" data-spy="affix" data-offset-top="100px"*/ style="position: relative">
    <div class="container">
      <nav>
        <ul class="nav pull-right">

          <li><%= link_to "Home", root_path %></li>

          <li><%= link_to "Help", help_path %></li>

          <% if signed_in? %>
            <li id="users-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Users <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "All users", users_path %></li>
                <li><%= link_to "Connections", following_user_path(current_user) %></li>
              </ul>
            </li>

            <li id="companies-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Companies <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "All companies", '#' %></li>
                <li><%= link_to "My companies", memberships_user_path(current_user) %></li>
              </ul>
            </li>


            <li id="account-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>

          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
